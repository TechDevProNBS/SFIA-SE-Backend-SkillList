 pipeline {
    agent any
        environment {
        VERSION = readMavenPom().getVersion()
        }
    stages {
        stage('Testing Environment') {
            steps {
                    sh 'mvn test -Dtest=ControllerAndServiceSuite'
                    sh 'mvn test -Dtest=IntegrationSuite'
                }
            }
        stage('Build') {
            steps {
               echo "Build"
                }
            }
        stage('Deploy') {
            steps {
                 echo "Hello"
            }
          }
        stage('Staging') {
            when {
            expression {
                   env.BRANCH_NAME == 'developer'
                   env.BRANCH_NAME == 'master'
                       }
                 }
            steps {
                echo "hello"
            }
        }
        stage('Production') {
            when {
            expression {
                   env.BRANCH_NAME == 'master'
                       }
                 }
            steps {
                sh 'mvn package -DskipTests'
                sh 'docker image build -t="SFIA-SE-Backend-Responsibilities:latest" .'
                sh 'docker push sebs2112/SFIA-SE-Backend-Responsibilities:latest'
                ./ansiblescript 
                echo "Ansible script runs the playbook"
            }
          }
        stage ("version"){
            steps {
                 echo "${VERSION}"
            }
        }
    }
}
