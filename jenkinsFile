 pipeline {
    agent any
        environment {
        VERSION = readMavenPom().getVersion()
        }
    stages {
        stage('Testing Environment') {
            steps {
                 
                }
            }
        stage('Build') {
            steps {
               echo "Build"
                }
            }
        stage('Deploy') {
            steps {
                 echo "Hello"
            }
          }
        stage('Staging') {
            when {
            expression {
                    }
                 }
            steps {
                echo "hello"
            }
        }
        stage('Production') {
            when {
            expression {
                   env.BRANCH_NAME == 'feature_documented'
                       }
                 }
            steps {
                sh 'mvn package -DskipTests'
                sh 'docker image build -t="SFIA-SE-Backend-Responsibilities:latest" .'
                sh 'docker push SFIA-SE-Backend-Responsibilities:latest'
            }
          }
        stage ("version"){
            steps {
                 echo "${VERSION}"
            }
        }
    }
}
